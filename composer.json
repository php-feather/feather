{
    "name": "php-feather/feather",
    "description": "Feather - Lightweight PHP Framework",
    "license": "MIT",

    "authors": [
        {
            "name": "Francis Carbah",
            "email": "afrounit@hotmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "php-feather/ignite": "dev-master",
        "illuminate/database": "^6.20",
        "nesbot/carbon": "^2.22"
    },
    "autoload": {
        "psr-4": {
            "Feather\\App\\": "app/"
        },
        "files": ["helpers/autoload.php"]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-create-project-cmd": [
            "php bin/envsetup.php"
        ]
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    }
}
